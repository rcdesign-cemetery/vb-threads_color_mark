			<title>Mark thread</title>
			<hookname>threadbit_display</hookname>
			<phpcode><![CDATA[$thread_title = $thread['threadtitle'];
$thread['threadtitle'] = '';
$open = (0 == $thread['open']);
$stick = (1 == $thread['sticky']);
$ignore_pinned = (bool)$vbulletin->options['tcm_ignore_pinned'];
if ($stick)
{
    $thread['threadtitle'] = $vbulletin->options['tcm_html_pre_stick'];
}
if ($open and !($stick and $ignore_pinned))
{
    $thread['threadtitle'] .= $vbulletin->options['tcm_html_pre_close'];
}
$thread['threadtitle'] .= $thread_title;
if ($open and !($stick and $ignore_pinned))
{
    $thread['threadtitle'] .= $vbulletin->options['tcm_html_post_close'];
}
if ($stick)
{
    $thread['threadtitle'] .= $vbulletin->options['tcm_html_post_stick'];
}
unset($thread_title, $open, $stick, $ignore_pinned);]]></phpcode>
		</plugin>
